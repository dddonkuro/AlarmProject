<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:paddingLeft="26dp"
        android:paddingRight="26dp"
        android:background="#000000"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:paddingTop="40dp"
        android:id="@+id/innerlayout">
            <RelativeLayout
                android:layout_width="350dp"
                android:layout_height="330dp"
                android:paddingLeft="26dp"
                android:paddingRight="26dp"
                android:background="#d25b5b"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:paddingTop="40dp"
                android:paddingBottom="20dp"
                android:id="@+id/innerlayout2">

                <RelativeLayout
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"

                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:background="#cccccc"
                    android:id="@+id/lockButtonlayout"
                    android:layout_alignParentLeft="true">
                    <ImageButton
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageLockButton"
                        android:src="@drawable/lock"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:paddingTop="18dp"
                        android:layout_below="@+id/lockLabel"
                        android:layout_alignLeft="@+id/lockLabel"
                        android:background="@android:color/transparent"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/LockedLabel"
                        android:paddingTop="0dp"
                        android:layout_centerHorizontal="true"
                        android:text="LOCK"
                        android:textSize="15dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="110dp"
                    android:layout_height="100dp"
                    android:paddingLeft="26dp"
                    android:paddingRight="23dp"
                    android:layout_gravity="center"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:background="#cccccc"
                    android:id="@+id/imageUnlockButtonlayout2"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignBottom="@+id/lockButtonlayout">
                    <ImageButton
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageUnlockButton"
                        android:src="@drawable/unlock"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:paddingTop="18dp"
                        android:background="@android:color/transparent"
                        android:layout_below="@+id/unlockLabel"
                        android:layout_alignLeft="@+id/lockLabel" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/unLockedLabel"
                        android:paddingTop="0dp"
                        android:layout_centerHorizontal="true"
                        android:text="UNLOCK"
                        android:textSize="15dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp"
                    android:layout_gravity="center"
                    android:paddingTop="0dp"
                    android:paddingBottom="5dp"
                    android:background="#cccccc"
                    android:id="@+id/istateButtonlayout"
                    android:layout_below="@+id/lockButtonlayout"
                    android:layout_marginTop="15dp"
                    >
                    <ImageButton
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/StateButton"
                        android:src="@drawable/unlock"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:paddingTop="15dp"
                        android:background="@android:color/transparent"
                        android:layout_alignLeft="@+id/lockLabel"
                        android:layout_centerInParent="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/stateLabel"
                        android:layout_centerHorizontal="true"
                        android:text="UNLOCKED"
                        android:textSize="26dp"/>
                </RelativeLayout>
        </RelativeLayout>


        </RelativeLayout>
</LinearLayout>