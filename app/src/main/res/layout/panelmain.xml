<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/RelLayout"

  android:weightSum="1">
    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_gravity ="center"
      android:background="#cccccc"
        android:layout_marginTop="30dp"
        android:id="@+id/innerlayout"
        android:layout_weight="0.15">

        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:background="#B1C8B7"
            >

        </RelativeLayout>

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_gravity ="center"
        android:background="#cccccc"
        android:layout_marginTop="30dp"
        android:id="@+id/lockButton"
        android:layout_weight="0.15">
    </RelativeLayout>

    <ImageButton
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageLockButton"
            android:src="@drawable/lock"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_below="@+id/lockLabel"
            android:layout_alignLeft="@+id/lockLabel" />
        <ImageButton
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageUnlockButton"
            android:src="@drawable/unlock"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_below="@+id/unlockLabel"
            android:layout_alignLeft="@+id/lockLabel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lockLabel"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:text="LOCK"
            android:textSize="26dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/unlockLabel"
            android:layout_below="@+id/imageLockButton"
            android:layout_centerHorizontal="true"
            android:text="UNLOCK"
            android:textSize="26dp"/>


    </RelativeLayout>


</RelativeLayout>